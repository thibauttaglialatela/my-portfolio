{% extends 'base.html.twig' %}

{% block title %}Content index{% endblock %}

{% block body %}
    <h1>Content index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Date</th>
                <th>Description</th>
                <th>Localisation</th>
                <th>Template</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for content in contents %}
            <tr>
                <td>{{ content.id }}</td>
                <td>{{ content.name }}</td>
                <td>{{ content.date ? content.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ content.description }}</td>
                <td>{{ content.localisation }}</td>
                <td>{{ content.template }}</td>
                <td>
                    <a href="{{ path('content_show', {'id': content.id}) }}">show</a>
                    <a href="{{ path('content_edit', {'id': content.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('content_new') }}">Create new</a>
{% endblock %}
