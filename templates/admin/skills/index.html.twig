{% extends 'admin/base.html.twig' %}

{% block title %}Skills index{% endblock %}

{% block body %}
    <h1 class="text-light text-uppercase">Liste des compétences</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Date</th>
                <th>Description</th>
                <th>Localisation</th>
                <th>Catégorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for skill in skills %}
            <tr>
                <td>{{ skill.name }}</td>
                <td>{{ skill.date ? skill.date|date('d-m-Y') : '' }}</td>
                <td>{{ skill.description }}</td>
                <td>{{ skill.localisation }}</td>
                <td>{{ skill.category }}</td>
                <td>
                    <a href="{{ path('admin_skills_show', {'id': skill.id}) }}">Voir</a>
                    <a href="{{ path('admin_skills_edit', {'id': skill.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_skills_new') }}">Ajouter une nouvelle compétence</a>
{% endblock %}
