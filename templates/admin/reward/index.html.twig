{% extends 'admin/base.html.twig' %}

{% block title %}Hobby index{% endblock %}

{% block body %}
    <h1 class="text-light text-uppercase">Liste de mes passions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Date</th>
                <th>Description</th>
                <th>Catégorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hobby in hobbies %}
            <tr>
                <td>{{ hobby.name }}</td>
                <td>{{ hobby.date ? hobby.date|date('d-m-Y') : '' }}</td>
                <td>{{ hobby.description }}</td>
                <td>{{ hobby.category }}</td>
                <td>
                    <a href="{{ path('admin_hobby_edit', {'id': hobby.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_hobby_new') }}">Ajouter un nouveau hobby</a>
{% endblock %}
