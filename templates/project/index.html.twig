{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Projects {% endblock %}

{% block body %}
    <h1 class="text-light text-center text-uppercase">Mes projets</h1>
    <div class="row row-cols-3 row-cols-md-2 g-5 mb-4">
        {% for project in projects %}
            <div class="col-lg-6">
                <div class="card h-100">
                    <img src={{ vich_uploader_asset(project) }} class="card-img-top" alt={{ project.name }}>
                    <div class="card-body d-flex flex-row justify-content-around align-items-center">
                        <h5 class="card-title">{{ project.name }}</h5>
                        <p class="card-text">{{ project.date|format_date('full', locale='fr') }}</p>
                        <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-outline-info">En savoir
                            plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
