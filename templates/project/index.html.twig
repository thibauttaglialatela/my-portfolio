{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Projects {% endblock %}

{% block body %}
    <h1 class="text-light text-center text-uppercase">Mes projets</h1>
    <div class="row row-cols-3 row-cols-md-2 g-5 mb-4">
        {% for project in projects %}
            <div class="col-lg-4">
                <div class="card h-100">
                    {% if project.imageFile %}
                        <img src="{{ vich_uploader_asset(project) }}" class="card-img-top img-fluid" alt="{{ project.name }}">
                    {% else %}
                        <img src="https://picsum.photos/100/" class="card-img-top img-fluid" alt="image picsum alÃ©atoire">
                    {% endif %}
                    <div class="card-body d-flex flex-column justify-content-around align-items-center">
                        <div class="d-flex flex-row justify-content-between">
                            <h5 class="card-title">{{ project.name }}</h5>
                        </div>
                        <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-outline-info">En savoir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
