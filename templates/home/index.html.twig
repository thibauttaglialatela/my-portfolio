{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Home{% endblock %}

{% block body %}
    <h1 class="text-center text-uppercase text-light">Mon portfolio</h1>
    <div class="card shadow-lg">
        <div class="row">
            <div class="col-md-4">
                <img src="{{ my_profile.picture }}" class="img-fluid" alt="...">
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    <p class="card-text">{{ my_profile.summary }}</p>
                    <p class="card-text">{{ my_profile.firstname }} {{ my_profile.lastname }}</p>
                </div>
            </div>
        </div>


    </div>
    <section>
        <h2 class="text-center text-uppercase text-light">mes projets récents</h2>
        <div class="card-group">
            {% for project in projects %}

                <div class="card mx-2 mb-4">
                    <img src="{{ project.image }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ project.name }}</h5>
                        <p class="card-text">Projet achevé le {{ project.date|format_date('short', locale='fr') }}</p>
                    </div>
                </div>


            {% endfor %}
        </div>

    </section>
{% endblock %}
